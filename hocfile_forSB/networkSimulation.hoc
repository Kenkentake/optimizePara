	    loop_counter = loop_counter + 1
	    {pc.set_parent_comm()}
	    if(pc.id==0){
	        printf("########################################\n%dth while roop in NEURON procs is %lf\n########################################\n", loop_counter, elapse_time)
        }
	    
	    rcv_pop_vec_weight = new Vector()
