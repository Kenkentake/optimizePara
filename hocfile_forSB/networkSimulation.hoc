	    if(flg_cmaes_terminate != 0) {
            printf("######### 012 flg_cmaes_terminate = %d (pc.id = %d)\n", flg_cmaes_terminate, pc.id)
            printf("######### 013 Break While loop (pc.id = %d)\n", pc.id)
            break
        }
	    printf("I dont still break (%d times)\n", loop_counter)
    }
}


